" General
set nu
set rnu
set showbreak=+++
set textwidth=100
set showmatch
set visualbell

set hlsearch
set smartcase

set autoindent
set smartindent
set formatoptions+=r

set mouse=a
set expandtab
set tabstop=4
set shiftwidth=4

" Advanced
set wildmenu
set ruler

set undolevels=1000
set backspace=indent,eol,start
set path+=**

" Style
color desert

